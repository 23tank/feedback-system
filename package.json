{
  "name": "feedback-management-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Feedback Management System monorepo with React frontend and Express backend",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently -k -n backend,frontend -c blue,green \"npm:dev -w backend\" \"npm:dev -w frontend\"",
    "start": "concurrently -k -n backend,frontend -c blue,green \"npm:start -w backend\" \"npm:start -w frontend\"",
    "install:all": "npm install --workspaces",
    "format": "echo 'Add your formatter here'"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}

